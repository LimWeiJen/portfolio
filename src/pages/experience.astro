<style>
  .dots {
    position: absolute;
    top: 0;
    left: 0;
    width: 98vw;
    height: 97vh;
    overflow: hidden;
    z-index: -1;
  }
  body {
    overflow: hidden;
    opacity: 0%;
    animation: fade-in 3s ease forwards;
  }
  h1 {
    margin: 1rem;
    text-align: center;
  }
  p {
    margin: 0.1rem;
  }
  a {
    position: absolute;
    padding: 1rem;
    left: 50%;
  }
  @keyframes fade-in {
    0% {
      opacity: 0%;
    }
    100% {
      opacity: 100%;
    }
  }

ul {
  --col-gap: 2rem;
  --row-gap: 2rem;
  --line-w: 0.1rem;
  display: grid;
  grid-template-columns: var(--line-w) 1fr;
  grid-auto-columns: max-content;
  column-gap: var(--col-gap);
  list-style: none;
  width: min(50rem, 80%);
  margin-inline: auto;
  height: 25rem;
  overflow-y: scroll;
}

/* line */
ul::before {
  content: "";
  grid-column: 1;
  grid-row: 1 / span 20;
  background: rgb(225, 225, 225);
  border-radius: calc(var(--line-w) / 2);
}

/* columns*/

/* row gaps */
ul li:not(:last-child) {
  margin-bottom: var(--row-gap);
}

/* card */
ul li {
  grid-column: 2;
  margin-inline: var(--inlineP);
  grid-row: span 2;
  display: grid;
  grid-template-rows: min-content min-content min-content;
}

/* date */
ul li .date {
  margin-inline: calc(var(--inlineP) * -1);

  text-align: start;
  font-size: 0.7rem;

  position: relative;
}

/* date flap */
ul li .date::before {
  content: "";
  aspect-ratio: 1;
  position: absolute;
  top: 100%;
}

/* circle */
ul li .date::after {
  content: "";
  position: absolute;
  width: 0.1rem;
  aspect-ratio: 1;
  border: 0.3rem solid;
  border-radius: 50%;
  top: 50%;

  transform: translate(50%, -50%);
  right: calc(100% + var(--col-gap) + var(--line-w) / 2);
}

/* title descr */
ul li .title,
ul li .descr {
  position: relative;
}
ul li .title {
  overflow: hidden;
  padding-block-start: 1.5rem;
}
ul li .descr {
  padding-block-end: 10rem;
}

/* shadows */
ul li .title::before {
  content: "";
  position: absolute;
  width: 100%;
  height: 0.5rem;
  background-color: #93b1a62d;
  left: 50%;
  transform: translate(-50%, 50%);
}
ul li .title::before {
  bottom: calc(100% + 0.125rem);
}

@media (min-width: 40rem) {
  ul {
    grid-template-columns: 1fr var(--line-w) 1fr;
  }
  ul::before {
    grid-column: 2;
  }
  ul li:nth-child(odd) {
    grid-column: 1;
  }
  ul li:nth-child(even) {
    grid-column: 3;
  }

  /* start second card */
  ul li:nth-child(2) {
    grid-row: 2/4;
  }

  ul li:nth-child(odd) .date::before {
    clip-path: polygon(0 0, 100% 0, 100% 100%);
    left: 0;
  }

  ul li:nth-child(odd) .date::after {
    transform: translate(-50%, -50%);
    left: calc(100% + var(--col-gap) + var(--line-w) / 2);
  }
  ul li:nth-child(odd) .date {
    border-radius: 0 calc(var(--dateH) / 2) calc(var(--dateH) / 2) 0;
  }
}
</style>
