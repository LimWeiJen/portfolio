<style>
  .preferable {
    color: #fff;
    position: absolute;
    transform: rotate(-15deg) translateY(-3.5rem) translateX(-2rem);
    font-size: 0.8rem;
  }
  a {
    transition: all 0.3s ease;
  }
  a:hover {
    transform: scale(1.1);
  }
  .contacts {
    display: flex;
    justify-content: space-between;
  }
  body {
    overflow: hidden;
    opacity: 0%;
    animation: fade-in 3s ease forwards;
  }
  div {
    width: 30rem;
  }
  @keyframes fade-in {
    0% {
      opacity: 0%;
    }
    100% {
      opacity: 100%;
    }
  }
  .dots {
    position: absolute;
    top: 0;
    left: 0;
    width: 98vw;
    height: 97vh;
    overflow: hidden;
    z-index: -1;
  }
  @media (max-width: 767px) {
    .contacts {
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    div {
      width: 20rem;
    }
    h1 {
      text-align: center;
    }
    .preferable {
      transform: rotate(-15deg) translateX(6rem);
    }
  }
